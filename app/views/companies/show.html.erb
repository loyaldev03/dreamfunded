                        <p class='help-our-campaign'>
                            Help us reach our goal. <br>Share our campaing to your friends and family.
                        </p>
                        <section class='centered'>
                            <a id='facebook' class="share-invites-social" href='#'> <i class="fa fa-facebook"></i></a>
                            <script type="text/javascript">
                              $('#facebook').click(function(){
                                FB.ui({
                                  method: 'share',
                                  href: "https://dreamfunded.vc/companies/<%= @company.slug %>",
                                  redirect_uri: "https://dreamfunded.vc/companies/<%= @company.slug %>",
                                  // quote: "Invest in <%= @company.name %> on DreamFunded",
                                  title: "<%= @company.name %>",
                                  description: "<%= @company.campaign.tagline %>"
                                }, function(response){});

                              })
                            </script>
                            <a id="twitter" class="share-invites-social" target="_blank"
                             href="http://twitter.com/intent/tweet?url=https://dreamfunded.vc/companies/<%= @company.slug %>"
                              title="Share via Twitter">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a id ='linkedin' class="share-invites-social" target="_blank" href="http://www.linkedin.com/shareArticle?mini=true&amp;ro=false&amp;trk=bookmarklet&amp;title=Invest%in%<%= @company.name%>&amp;url=https://dreamfunded.vc/companies/<%= @company.slug %>" target="_blank" title="Share via LinkedIn" >
                                <i class="fa fa-linkedin"></i>
                            </a>

                            <div class='company-info-cateogry campaign-website'>
                                <%= link_to @company.website_link, "http://"+@company.website_link, class: 'website-url', target: '_blank' %>
                            </div>

                        </section>
                    </section>
                </div>
            </div>

        </div>

